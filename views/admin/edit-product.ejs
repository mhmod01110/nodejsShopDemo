<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (isEdit) { %>edit-product<% }else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (isEdit) { %> <%= product.title %> <% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (isEdit) { %> <%= product.imageUrl %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (isEdit) { %><%= product.price %><% } %>">

            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (isEdit) { %> <%= product.description %> <% } %></textarea>
            </div>
            <% if (isEdit) { %>
                <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>
            <button class="btn" type="submit"><% if (!isEdit) { %>Add Product<% } else { %>Update Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>