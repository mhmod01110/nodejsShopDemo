<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard/users">
                                <i class="bi bi-people"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard/orders">
                                <i class="bi bi-cart3"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/dashboard/products">
                                <i class="bi bi-box"></i> Products
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Manage Products</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/add-product" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add New Product
                        </a>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="productsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product => { %>
                                        <tr>
                                            <td>
                                                <img src="<%= product.imageUrl %>" alt="<%= product.title %>" 
                                                    style="width: 50px; height: 50px; object-fit: cover;">
                                            </td>
                                            <td><%= product.title %></td>
                                            <td>$<%= product.price.toFixed(2) %></td>
                                            <td>
                                                <%= product.description.length > 100 ? 
                                                    product.description.substring(0, 100) + '...' : 
                                                    product.description %>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" 
                                                        class="btn btn-warning btn-sm">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <button class="btn btn-danger btn-sm ms-2" 
                                                        onclick="deleteProduct('<%= product._id %>')">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function deleteProduct(productId) {
            if (confirm('Are you sure you want to delete this product?')) {
                const csrf = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                
                fetch('/admin/product/' + productId, {
                    method: 'DELETE',
                    headers: {
                        'csrf-token': csrf
                    }
                })
                .then(result => {
                    return result.json();
                })
                .then(data => {
                    if (data.message === 'Success') {
                        location.reload();
                    } else {
                        alert('Error deleting product');
                    }
                })
                .catch(err => {
                    console.error('Error:', err);
                    alert('Error deleting product');
                });
            }
        }
    </script>
    <%- include('../includes/end.ejs') %> 